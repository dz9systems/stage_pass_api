rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // NEW STRUCTURE: User-specific image storage
    // users/{userId}/venue_images/{venueId}/{fileName}
    // users/{userId}/production_images/{productionId}/{fileName}
    // users/{userId}/settings_images/{fileName}
    // users/{userId}/seatmap_images/{venueId}/{fileName}
    match /users/{userId}/{allPaths=**} {
      // Public read for all user images
      allow read: if true;
      // Write only if authenticated user matches the userId in path
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // LEGACY STRUCTURE: Keep for backward compatibility
    // Allow authenticated users to upload files
    match /uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read for public files
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Production images - public read, authenticated write (legacy)
    match /productions/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User avatars - public read, authenticated write (legacy)
    match /avatars/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Venue images - public read, authenticated write (legacy)
    match /venues/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Gallery images - public read, authenticated write
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Documents - authenticated users only
    match /documents/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Temporary files - authenticated users only, auto-cleanup
    match /temp/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Admin files - admin users only (you can add admin role check)
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // QR codes for tickets - public read (needed for email clients), authenticated write
    match /qr-codes/{allPaths=**} {
      allow read: if true;  // Public read so email clients can display QR codes
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
  }
}
