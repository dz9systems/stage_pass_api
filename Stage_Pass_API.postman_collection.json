		},
		{
			"key": "base_url",
			"value": "http://localhost:5173",
			"type": "string",
			"description": "Frontend base URL for QR codes"
		},
		{
			"key": "production_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "performance_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "view_token",
			"value": "",
			"type": "string",
			"description": "View token from order (viewToken field). Get this from the order document in Firestore or from the email QR code link."
		}
	]
}

